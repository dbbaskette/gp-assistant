# --- Core database configuration ---
DB_URL=jdbc:postgresql://localhost:15432/gp_assistant
DB_USERNAME=gpadmin
DB_PASSWORD=VMware1!

# --- Local model defaults (used when OPENAI_API_KEY is empty) ---
LOCAL_MODEL_BASE_URL=http://127.0.0.1:1234/v1
LOCAL_CHAT_MODEL=local-chat-model
LOCAL_EMBEDDING_MODEL=local-embedding-model
# LOCAL_MODEL_API_KEY=

# --- OpenAI configuration (takes precedence when key provided) ---
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# OPENAI_EMBEDDING_API_KEY=
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_EMBEDDING_BASE_URL=https://api.openai.com/v1
# OPENAI_EMBEDDINGS_PATH=/v1/embeddings

# --- Application toggles ---
DOCS_INGEST_ON_STARTUP=true
SPRING_AI_MCP_CLIENT_ENABLED=false
APP_LOG_FILE=
APP_VECTORSTORE_DIMENSIONS=768

# --- Security: Encryption Key for MCP Server API Keys ---
# REQUIRED if using MCP server configuration UI
# Generate with: openssl rand -base64 32
APP_SECURITY_ENCRYPTION_KEY=

